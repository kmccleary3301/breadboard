{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ArtifactRefV1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "const": "artifact_ref_v1"
    },
    "id": {
      "type": "string"
    },
    "kind": {
      "type": "string",
      "enum": [
        "tool_output",
        "tool_diff",
        "tool_result"
      ]
    },
    "mime": {
      "type": "string"
    },
    "size_bytes": {
      "type": "integer",
      "minimum": 0
    },
    "sha256": {
      "type": "string"
    },
    "storage": {
      "const": "workspace_file"
    },
    "path": {
      "type": "string"
    },
    "preview": {
      "type": [
        "object",
        "null"
      ],
      "additionalProperties": false,
      "properties": {
        "lines": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "omitted_lines": {
          "type": [
            "integer",
            "null"
          ]
        },
        "note": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    }
  },
  "required": [
    "schema_version",
    "id",
    "kind",
    "mime",
    "size_bytes",
    "sha256",
    "storage",
    "path"
  ]
}
