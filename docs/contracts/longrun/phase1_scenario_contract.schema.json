{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LongRunPhase1ScenarioContract",
  "type": "object",
  "required": [
    "contract_version",
    "pilot_schema_version",
    "allowed_stop_classes",
    "required_assertions",
    "required_scenarios"
  ],
  "properties": {
    "contract_version": { "type": "string", "minLength": 1 },
    "pilot_schema_version": { "type": "string", "minLength": 1 },
    "allowed_stop_classes": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 1
    },
    "required_assertions": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 1
    },
    "required_scenarios": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "expected_stop_classes"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "expected_stop_classes": {
            "type": "object",
            "required": ["baseline", "longrun"],
            "properties": {
              "baseline": {
                "type": "array",
                "items": { "type": "string", "minLength": 1 },
                "minItems": 1
              },
              "longrun": {
                "type": "array",
                "items": { "type": "string", "minLength": 1 },
                "minItems": 1
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
