[
  {
    "type": "startup_preflight",
    "timeout": 20,
    "interval": 0.3,
    "ready_tokens": ["for shortcuts"],
    "kick_keys": ["Escape"],
    "kick_every_polls": 1
  },
  {
    "type": "send",
    "text": "replay:config/cli_bridge_replays/phase4/large_diff_artifact_smoke_v1.jsonl",
    "submit": true,
    "clear_first": true,
    "clear_mode": "ctrl_u"
  },
  {
    "type": "wait_until",
    "contains": [
      "artifact",
      "artifact-sample-diff.diff"
    ],
    "timeout": 45
  },
  {
    "type": "wait_until",
    "contains": [
      "Applied patch via artifact-backed diff preview."
    ],
    "timeout": 45
  },
  {
    "type": "wait_for_quiet",
    "quiet_seconds": 1.5,
    "timeout": 30,
    "semantic_timeout": 8,
    "semantic_fail_fast": true
  }
]
