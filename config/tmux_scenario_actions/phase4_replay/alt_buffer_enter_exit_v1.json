[
  {
    "type": "startup_preflight",
    "timeout": 20,
    "interval": 0.3,
    "ready_tokens": ["for shortcuts"],
    "kick_keys": ["Escape"],
    "kick_every_polls": 1
  },
  {
    "type": "key",
    "key": "Escape",
    "wait": 0.25
  },
  {
    "type": "send",
    "text": "replay:config/cli_bridge_replays/phase4/alt_buffer_enter_exit_smoke_v1.jsonl",
    "submit": true,
    "clear_first": true,
    "clear_mode": "ctrl_u"
  },
  {
    "type": "key",
    "key": "Escape",
    "wait": 0.2
  },
  {
    "type": "wait_until",
    "contains": ["Alt buffer replay ready."],
    "timeout": 40
  },
  {
    "type": "key",
    "key": "C-o",
    "wait": 0.3
  },
  {
    "type": "key",
    "key": "s",
    "wait": 0.3
  },
  {
    "type": "key",
    "key": "Escape",
    "wait": 0.3
  },
  {
    "type": "wait_for_quiet",
    "quiet_seconds": 1.5,
    "timeout": 35,
    "semantic_timeout": 8,
    "semantic_fail_fast": true,
    "must_contain": [
      "for shortcuts"
    ],
    "must_not_contain": [
      "[error] replay fixture not found",
      "Cannot read properties of undefined (reading 'length')",
      "UnhandledPromiseRejection"
    ]
  }
]
