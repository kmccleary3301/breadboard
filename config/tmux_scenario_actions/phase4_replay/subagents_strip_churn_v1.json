[
  {
    "type": "startup_preflight",
    "timeout": 20,
    "interval": 0.3,
    "ready_tokens": [
      "shortcuts"
    ],
    "kick_keys": [
      "Escape"
    ],
    "kick_every_polls": 1
  },
  {
    "type": "send",
    "text": "replay:config/cli_bridge_replays/phase4/subagents_strip_churn_smoke_v1.jsonl",
    "submit": true,
    "clear_first": true,
    "clear_mode": "ctrl_u"
  },
  {
    "type": "wait_for_quiet",
    "quiet_seconds": 2.2,
    "timeout": 55,
    "semantic_timeout": 8,
    "semantic_fail_fast": true,
    "must_contain": [
      "Try \"fix typecheck errors\""
    ],
    "must_not_contain": [
      "[error] replay fixture not found",
      "Cannot read properties of undefined (reading 'length')",
      "buildModalStack.tsx:1084",
      "UnhandledPromiseRejection",
      "[phase4 replay target exited]",
      "[phase4 replay target] cli_bridge health check failed"
    ],
    "must_contain_any": [
      "? shortcuts",
      "? for shortcuts"
    ]
  }
]
