[
  {
    "type": "startup_preflight",
    "timeout": 20,
    "interval": 0.3,
    "ready_tokens": ["shortcuts"],
    "kick_keys": ["Escape"],
    "kick_every_polls": 1
  },
  {
    "type": "send",
    "text": "replay:config/cli_bridge_replays/phase4/thinking_tool_interleaved_smoke_v1.jsonl",
    "submit": true,
    "clear_first": true,
    "clear_mode": "ctrl_u"
  },
  {
    "type": "wait_until",
    "contains": ["[task tree] thinking"],
    "timeout": 30
  },
  {
    "type": "wait_until",
    "contains": ["Write(src/main.ts)"],
    "timeout": 45
  },
  {
    "type": "wait_until",
    "contains": ["Patched src/main.ts"],
    "timeout": 45
  },
  {
    "type": "wait_for_quiet",
    "quiet_seconds": 2.5,
    "timeout": 45,
    "semantic_timeout": 8,
    "semantic_fail_fast": true,
    "must_not_contain": [
      "[task tree] thinking",
      "[error] replay fixture not found",
      "Cannot read properties of undefined (reading 'length')",
      "buildModalStack.tsx:1084",
      "UnhandledPromiseRejection",
      "[phase4 replay target exited]",
      "[phase4 replay target] cli_bridge health check failed"
    ]
  }
]
